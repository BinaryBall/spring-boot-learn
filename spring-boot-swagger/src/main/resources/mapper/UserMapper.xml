<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jamal.springbootswagger.mapper.UserMapper">

    <resultMap id="baseMap" type="com.jamal.springbootswagger.domain.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
    </resultMap>

    <select id="findUser" resultMap="baseMap">
        select * from user limit 1,11
    </select>

    <insert id="insertUser" parameterType="com.jamal.springbootswagger.domain.User">
        insert into user (name,mobile,email) values (#{name},#{mobile},#{email})
    </insert>

    <delete id="deleteUser" parameterType="int">
        delete from user where id = #{id}
    </delete>

    <update id="updateUser" parameterType="com.jamal.springbootswagger.domain.User">
        update user set
            name = #{name},
            mobile = #{mobile},
            email = #{email}
        where id = #{id}
    </update>
</mapper>